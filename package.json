{
  "name": "@ncobase/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Ncobase frontend project",
  "repository": "git@github.com:ncobase/frontend.git",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "npx rimraf --glob '**/{node_modules,.next,dist,.turbo,.eslintcache}'",
    "dev": "turbo run dev",
    "dev:console": "pnpm dev --filter=@ncobase/console --filter='./packages/*' --filter='./plugins/*'",
    "lint": "turbo run lint",
    "lint:fix": "pnpm lint -- --fix && pnpm prettier --write",
    "prettier": "prettier \"**/*.{js,jsx,ts,tsx}\"",
    "build": "turbo run build --filter=!./apps/*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.7.4",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.12.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
